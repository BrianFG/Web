<style type="text/css">
  

</style>
  </head>

  <body>
  <div class="container">

    <h1>Caballos danzarines</h1>
    
    <div id="principal">
    <input id="creacion-juego" type="button" class="btn btn-sm btn-info" value="Crear Juego"/>
    <input id="union-juego" type="button" class="btn btn-sm btn-primary" value="Unirse a Partida"/>
    </div>

    <!-- -->

    <div id="nuevo-juego">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label class="control-label col-sm-4" for="nombre_del_juego">Escriba el nombre del juego: </label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="nombre-juego">
          </div>
        </div>
        <div class="form-group"> 
          <div class="col-sm-offset-4 col-sm-4">
            <button id="crear-juego" class="btn btn-success">Crear</button>
          </div>
        </div>
      </form>
    </div>


    <!-- -->


    <div id="seccion-union">
      <select class="selectpicker" id="lista-juegos">

      </select>
      <button class="btn btn-md btn-warning" id="unir-juego">Unirse</button>

    </div>


    <div id="juego">
      <div class="col-xs-12 col-sm-4">
        <div id="mensaje-juego">
        </div>
      </div>
      <div class="col-xs-12 col-sm-8">
        <div id="tablero">
        </div>
      </div>
    </div>



  </div>

  </body>

</html>
